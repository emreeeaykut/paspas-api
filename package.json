{
  "name": "paspas-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register src/index.ts --exec ts-node",
    "build": "rm -rf dist && tsc -p . && ncp src/schema dist/schema",
    "start": "node dist/index.js",
    "vercel:start": "vercel dev",
    "vercel:deploy": "vercel deploy --prod",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:new": "yarn run typeorm migration:create -n",
    "migration:generate": "yarn run typeorm migration:generate -n",
    "migrate": "yarn run typeorm migration:run -t=false",
    "migration:show": "yarn run typeorm migration:show",
    "rollback": "yarn run typeorm migration:revert",
    "schema:drop": "yarn run typeorm schema:drop",
    "schema:sync": "yarn run typeorm schema:sync",
    "typeorm-seeding": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-seeding/dist/cli.js",
    "seed:config": "yarn run typeorm-seeding config",
    "seed": "yarn run typeorm-seeding seed",
    "db:reset": "yarn schema:drop && yarn schema:sync && yarn seed"
  },
  "_moduleAliases": {
    "@config": "dist/config",
    "@migrations": "dist/migrations",
    "@subscribers": "dist/subscribers",
    "@seeds": "dist/seeds",
    "@factories": "dist/factories",
    "@entities": "dist/entities",
    "@inputs": "dist/inputs",
    "@repositories": "dist/repositories",
    "@resolvers": "dist/resolvers",
    "@services": "dist/services",
    "@utils": "dist/utils",
    "@contexts": "dist/contexts",
    "@middlewares": "dist/middlewares",
    "@dtos": "dist/dtos",
    "@mappers": "dist/mappers",
    "@common": "dist/common"
  },
  "dependencies": {
    "apollo-server-core": "^3.6.7",
    "apollo-server-express": "^3.6.7",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-session": "^1.17.2",
    "graphql": "^15.3.0",
    "graphql-upload": "^13.0.0",
    "helmet": "^5.0.2",
    "ioredis": "^5.0.4",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "ncp": "^2.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.45",
    "typeorm-seeding": "^1.6.1",
    "typeorm-typedi-extensions": "^0.4.1",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/connect-redis": "^0.0.18",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/faker": "^6.6.9",
    "@types/graphql-upload": "^8.0.11",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.31",
    "@types/pg": "^8.6.5",
    "@types/validator": "^13.7.2",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4",
    "vercel": "^24.2.3"
  }
}
